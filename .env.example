# ============================================================
# Automaton Auditor — Environment Variables
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to git.
# ============================================================

# --- Anthropic API ---
ANTHROPIC_API_KEY=antropic api key


# Claude model to use (defaults to claude-opus-4-6 if not set)
CLAUDE_MODEL=claude-opus-4-6

# --- LangSmith Observability (optional but recommended) ---
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=automaton-auditor

# --- GitHub (optional — for accessing private repos) ---
GITHUB_TOKEN=your_github_token_here
